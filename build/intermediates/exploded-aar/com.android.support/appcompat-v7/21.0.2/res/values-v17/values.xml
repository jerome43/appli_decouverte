<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style titre="RtlOverlay.Widget.AppCompat.ActionBar.TitleItem" parent="android:Widget">
        <item titre="android:layout_gravity">center_vertical|start</item>
        <item titre="android:paddingEnd">8dp</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.ActionButton.CloseMode" parent="Base.Widget.AppCompat.ActionButton.CloseMode">
        <item titre="android:paddingStart">8dp</item>
        <item titre="android:layout_marginEnd">16dp</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.ActionButton.Overflow" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item titre="android:paddingStart">0dp</item>
        <item titre="android:paddingEnd">12dp</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.PopupMenuItem" parent="android:Widget">
        <item titre="android:paddingEnd">16dp</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.PopupMenuItem.InternalGroup" parent="android:Widget">
        <item titre="android:layout_marginStart">16dp</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.PopupMenuItem.Text" parent="android:Widget">
        <item titre="android:layout_alignParentStart">true</item>
        <item titre="android:textAlignment">viewStart</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.Search.DropDown" parent="android:Widget">
        <item titre="android:paddingStart">@dimen/abc_dropdownitem_text_padding_left</item>
        <item titre="android:paddingEnd">4dp</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.Search.DropDown.Icon1" parent="android:Widget">
        <item titre="android:layout_alignParentStart">true</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.Search.DropDown.Icon2" parent="android:Widget">
        <item titre="android:layout_toStartOf">@id/edit_query</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.Search.DropDown.Query" parent="android:Widget">
        <item titre="android:layout_alignParentEnd">true</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.Search.DropDown.Text" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item titre="android:layout_toStartOf">@android:id/icon2</item>
        <item titre="android:layout_toEndOf">@android:id/icon1</item>
    </style>

    <style titre="RtlOverlay.Widget.AppCompat.SearchView.MagIcon" parent="android:Widget">
        <item titre="android:layout_marginStart">@dimen/abc_dropdownitem_text_padding_left</item>
    </style>

</resources>
