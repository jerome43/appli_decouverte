<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.insensa.decouverte_patrimoine.android"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow">
        <activity
            android:name="fr.insensa.decouverte_patrimoine.android.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow"/>
            <!-- enable to use the search dialog in this activity to send searches to SearchActivity -->
            <meta-data android:name="android.app.default_searchable"
                android:value=".SearchActivity" />
            <!-- activité principale à lancer au démarrage de l'appli-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--this is the searchable activity; it performs searches -->
        <activity android:name=".SearchActivity"
            android:parentActivityName="fr.insensa.decouverte_patrimoine.android.MainActivity" >
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:screenOrientation="portrait"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.insensa.decouverte_patrimoine.android.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.insensa.decouverte_patrimoine.android.JeuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:parentActivityName="fr.insensa.decouverte_patrimoine.android.CircuitActivity" >
        </activity>
        <activity
            android:name="fr.insensa.decouverte_patrimoine.android.JeuMoyenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:parentActivityName="fr.insensa.decouverte_patrimoine.android.CircuitActivity" >
        </activity>
        <activity
            android:name="fr.insensa.decouverte_patrimoine.android.CircuitActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName="fr.insensa.decouverte_patrimoine.android.MainActivity" >
        </activity>
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDsagxeQSKVDUp6HaEW31eA9ROTt-Oa5qk"/>
        <provider android:name=".MyContentProvider"
            android:authorities="fr.insensa.decouverte_patrimoine.android"></provider>
    </application>

</manifest>
